<?xml version="1.0" encoding="utf-8"?>
<com.wontondon.buckets.ui.player.list.PlayerListView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/screen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Player List Screen"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btn_add_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/screen_name"
        android:text="Add Player" />
    </RelativeLayout>

</com.wontondon.buckets.ui.player.list.PlayerListView>